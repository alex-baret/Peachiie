<!-- /templates/page.liquid -->
{% if shop.customer_accounts_enabled %}
  {% if customer %}
    {% assign redirect_link = "/pages/sub_payment" %}
	
      <input type="hidden" id = "customer_id" value="{{customer.id}}">
    
  {% else %}
 	{% assign redirect_link = "/account" %}
    {% if shop.customer_accounts_optional %}
      {{ 'Create an account' | customer_register_link }}
    {% endif %}
  {% endif %}
{% endif %}


<style>
.s-bnt {
    background: #fea6da;
    width: 100%;
    max-width: 280px;
    margin: 50px 0;
    padding: 10px;
    border: 1px solid #fea6da;
    text-transform: uppercase;
    color: #ffffff;
    border-radius: 5px;
    box-shadow: 0 4px 5px #c3c3c3;
	transition: 0.2s;
  	cursor:pointer
}
button.s-bnt:hover {
    background: #ef89c5;
    transform: scale(1.1);
}

</style>
<header>
      <h1>{{ page.title }}</h1>
   </header>
<div class="page-width page-container">
    <div class="rte rte--indented-images"> 
     {{page.content}}
  </div>
</div>
          
      
      


